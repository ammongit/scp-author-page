{% macro link(slug, name, is_normal = False) -%}
  {% if slug.startswith('/') -%}
    {# Is actually a wiki-relative link, like a forum path #}
    [{{ slug }} {{ name }}]
  {%- elif is_normal -%}
    [[[{{ name }}]]]
  {%- else -%}
    [[[{{ slug }}|{{ name }}]]]
  {%- endif -%}
{%- endmacro %}

{% macro tag(tag, name) -%}
  [/system:page-tags/tag/{{ tag }}#pages {{ name }}]
{%- endmacro %}

{% macro user(name) -%}
  [[*user {{ name }}]]
{%- endmacro %}
